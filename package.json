{
  "name": "vue-i18n-ally",
  "displayName": "Vue i18n Ally",
  "description": "Forked from think2011/vscode-vue-i18n, with some feature changes",
  "version": "0.3.2",
  "publisher": "antfu",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Other"
  ],
  "preview": true,
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "keywords": [
    "vue",
    "vue-i18n",
    "vue i18n",
    "i18n"
  ],
  "icon": "static/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/vscode-vue-i18n-ally"
  },
  "homepage": "https://github.com/antfu/vscode-vue-i18n-ally",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.vue-i18n-ally.file-translator",
        "title": "Translate i18n content from current file",
        "icon": {
          "light": "./static/icon-translate.svg",
          "dark": "./static/icon-translate.svg"
        }
      },
      {
        "command": "extension.vue-i18n-ally.config-locales",
        "title": "VueI18n Ally: Manual configure locales path"
      },
      {
        "command": "extension.vue-i18n-ally.auto-detect-locales",
        "title": "VueI18n Ally: Auto detect locales path"
      },
      {
        "command": "extension.vue-i18n-ally.config-display-language",
        "title": "VueI18n Ally: Change display language"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "vueI18nEnabled && resourceLangId =~ /vue(-html)?|(type|java)script/",
          "command": "extension.vue-i18n-ally.file-translator",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Vue i18n Ally",
      "properties": {
        "vue-i18n-ally.localesPaths": {
          "type": "string",
          "default": "",
          "description": "Path to locales directory (relative to project root)"
        },
        "vue-i18n-ally.sourceLanguage": {
          "type": "string",
          "default": "en",
          "description": "Source language for machine translation"
        },
        "vue-i18n-ally.displayLanguage": {
          "type": "string",
          "default": "en",
          "description": "Default display language"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rimraf -rf ./out/ && tsc -p ./",
    "watch": "rimraf -rf ./out/ && tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^5.2.6",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^1.7.0",
    "eslint": "^5.16.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-promise": "^4.1.1",
    "eslint-plugin-standard": "^4.0.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.5",
    "vscode": "^1.1.33"
  },
  "dependencies": {
    "fast-glob": "^2.2.6",
    "lodash": "^4.17.11",
    "translation.js": "^0.7.8"
  }
}
