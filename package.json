{
  "name": "vue-i18n-ally",
  "displayName": "Vue i18n Ally",
  "description": "帮你更好的写vue i18n，目前是 alpha 版本",
  "version": "0.1.0",
  "publisher": "antfu",
  "engines": {
    "vscode": "^1.29.0"
  },
  "categories": [
    "Other"
  ],
  "preview": true,
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "keywords": [
    "vue",
    "vue-i18n",
    "vue i18n",
    "i18n"
  ],
  "icon": "static/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/antfu/vscode-vue-i18n-ally"
  },
  "homepage": "https://github.com/antfu/vscode-vue-i18n-ally",
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.vue-i18n-ally.transCenter",
        "title": "翻译当前文件的i18n",
        "icon": {
          "light": "./static/icon-translate.svg",
          "dark": "./static/icon-translate.svg"
        }
      },
      {
        "command": "extension.vue-i18n-ally.config",
        "title": "vue-i18n: 手动配置路径"
      },
      {
        "command": "extension.vue-i18n-ally.auto-init",
        "title": "vue-i18n: 自动配置路径"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == vue-html",
          "command": "extension.vue-i18n-ally.transCenter",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == vue",
          "command": "extension.vue-i18n-ally.transCenter",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == javascript",
          "command": "extension.vue-i18n-ally.transCenter",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == typescript",
          "command": "extension.vue-i18n-ally.transCenter",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Vue-i18n",
      "properties": {
        "vue-i18n-ally.i18nPaths": {
          "type": "string",
          "default": "",
          "description": "翻译文件的目录（相对于根目录）"
        },
        "vue-i18n-ally.sourceLocale": {
          "type": "string",
          "default": "zh-CN",
          "description": "机器翻译源语言"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "rimraf -rf ./out/ && tsc -p ./",
    "watch": "rimraf -rf ./out/ && tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.123",
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.9",
    "rimraf": "^2.6.3",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.21"
  },
  "dependencies": {
    "fast-glob": "^2.2.6",
    "lodash": "^4.17.11",
    "translation.js": "^0.7.5"
  }
}
