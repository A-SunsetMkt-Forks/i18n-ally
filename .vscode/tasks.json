// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dev Build",
      "type": "npm",
      "script": "dev",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "problemMatcher": [
        {
          "base": "$tsc-watch", // <-- extends the TypeScript watcher
          "background": {
            "activeOnStart": true,
            "beginsPattern": "webpack is watching the files...",
            "endsPattern": "hidden modules$"
          }
        }
      ],
      "group": "build"
    }
  ]
}
