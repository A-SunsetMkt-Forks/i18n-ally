{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "lib": ["es6", "es7"],
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ],
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/vscode/vscode.d.ts",
    "./node_modules/vscode/lib/*",
  ]
}
