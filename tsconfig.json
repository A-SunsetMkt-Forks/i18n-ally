{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "module": "esnext",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "moduleResolution": "node",
    "typeRoots": [ "node_modules/@types" ],
    "noUnusedLocals": true,
  },
  "include": [
    "src/**/*.ts",
    "./node_modules/vscode/vscode.d.ts",
    "./node_modules/vscode/lib/*",
  ]
}
