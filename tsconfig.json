{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    //"strict": true,
    "noUnusedLocals": true,
  },
  "rootDir": "src",
  "paths": {
    "lib/*": [
      ".",
      "./src"
    ]
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
