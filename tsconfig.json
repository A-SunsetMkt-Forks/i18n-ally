{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "out",
    "lib": ["es6", "es7"],
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "strict": true,
    "noUnusedLocals": false,
  },

  "rootDir": "src",
  "paths": {
    "lib/*": [
      ".", 
      "./src"
    ]
  },
  "exclude": [
    "node_modules", 
    ".vscode-test"
  ]
}
